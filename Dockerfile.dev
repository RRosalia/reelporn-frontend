FROM oven/bun:latest

WORKDIR /app

# Install Cypress dependencies for headless and GUI mode
# Based on https://docs.cypress.io/guides/continuous-integration/introduction#Dependencies
RUN apt-get update && apt-get install -y \
    libgtk2.0-0 \
    libgtk-3-0 \
    libgbm-dev \
    libnotify-dev \
    libnss3 \
    libxss1 \
    libasound2 \
    libxtst6 \
    xauth \
    xvfb \
    # Additional dependencies for Cypress
    libgconf-2-4 \
    libglu1-mesa \
    # Clean up to reduce image size
    && rm -rf /var/lib/apt/lists/*

# Copy package files
COPY package.json bun.lock* ./

# Install dependencies with cache mount
RUN --mount=type=cache,target=/root/.bun/install/cache \
    bun install

# Copy the rest of the application
COPY . .

# Create .next directory with proper permissions for cache
RUN mkdir -p .next/cache && chmod -R 777 .next

# Expose port 3000 for Next.js dev server
EXPOSE 3000

# Start the development server
CMD ["bun", "run", "dev"]
